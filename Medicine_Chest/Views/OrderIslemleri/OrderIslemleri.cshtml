
@using Medicine_Chest.Models.OrderIslemleri

@model OrderViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@section Scripts{
    <script>
        // grid üzerinde herhangi bir kaydın silinmesi için tıklandığında
        // hidden field'a kaydın id'sini basıp
        // diyaloğun açılmasını sağlayan metottur.




        // grid üzerinde herhangi bir kaydın kilitlenmesi için tıklandığında
        // hidden field'a kaydın id'sini basıp
        // diyaloğun açılmasını sağlayan metottur.
        function KilitleHazirlik(kodTankTuru) {
            $("#hdnKodTankTuruIdIslemler").val(kodTankTuru);
            $("#dialogKilitle").data("kendoDialog").open();
        }

        // silme diyaloğunda tamam tuşuna basıldığında
        // hidden field'daki id bilgisini kullanarak kaydın silinmesini
        // ve gridin refresh edilmesini sağlayan butondur
    


        // grid üzerindeki yeni kayıt butonuna tıklandığında
        // hesap planı ekleyebilmek için gerekli ekranın açılmasını sağlayacak metottur.
    

        function FiltreEkraniAc() {
            $('#exampleModal1').modal('show');
        }

    </script>
}

<div class="block block-bordered">
    <div class="block-header bg-gray-lighter" style="text-align: right">
        <h3 class="block-title" style="text-align: center">@ViewBag.Header</h3>

        <div class="block-options-simple ">
            <button type="button" class="btn btn-sm btn-danger"  style ="margin-right : 35px" data-toggle="modal" data-target="#exampleModal1"><i class="fa fa-filter"></i> Filtrele</button>
            <br></br>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <!--   <h5 class="modal-title" id="exampleModalLabel">Filtrele</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> -->
            </div>
            <div class="modal-body">

                <div class="block block-bordered">

                    <div class="block-content">

                        <div class="post d-flex flex-column-fluid" id="kt_post">
                            <!--begin::Wrapper-->
                            <div class="w-lg-600px bg-white rounded shadow-sm p-10 p-lg-15 mx-auto">
                                <!--begin::Form-->
                                <form class="form w-100" novalidate="novalidate" id="kt_sign_up_form1" asp-controller="OrderIslemleri" asp-action="FiltreleOrder" method="post" enctype="multipart/form-data">
                                    <!--begin::Heading-->
                                
                                    <!--begin::Input group-->
                                    <div class="row fv-row mb-7">
                                        <!--begin::Col-->
                                        <div class="col-xl-6">
                                            <label class="form-label fw-bolder text-dark fs-6">Sipariş ID</label>
                                            <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="UserIDSorgu" asp-for="UserIDSorgu" autocomplete="off" />
                                        </div>
                                        <!--end::Col-->
                                        <!--begin::Col-->
                                        <div class="col-xl-6">
                                            <label class="form-label fw-bolder text-dark fs-6">Kullanıcı Adı</label>
                                            <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="UserNameSorgu" asp-for="UserNameSorgu" autocomplete="off" />
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Kullanıcı Soyadı</label>
                                        <input class="form-control form-control-lg form-control-solid PhoneMask" type="text" placeholder="" name="UserSurnameSorgu" asp-for="UserSurnameSorgu" autocomplete="off" />
                                    </div>


                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Adres</label>
                                        <input class="form-control form-control-lg form-control-solid" type="email" placeholder="" name="AddressSorgu" asp-for="AddressSorgu" autocomplete="off"  />
                                        <span asp-validation-for="AddressSorgu" class="text-danger"></span>
                                    </div>
                                     <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Telefon Numarası</label>
                                        <input class="form-control form-control-lg form-control-solid PhoneMask" type="text" placeholder="" name="PhonenumberSorgu" asp-for="PhonenumberSorgu" autocomplete="off" />
                                    </div>
                                   
                          
                                     <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Ücret</label>
                                        <input class="form-control form-control-lg form-control-solid PhoneMask" type="text" placeholder="" name="PriceSorgu" asp-for="PriceSorgu" autocomplete="off" />
                                    </div>


                                    <!--end::Input group-->
                                    <!--begin::Actions-->
                                    <div class="text-center">
                                        @*<button type="submit" class="btn btn-primary">Register</button>*@
                                        <button type="submit" id="kt_sign_up_submit1" class="btn btn-lg btn-primary">
                                            <span class="indicator-label">Sorgula</span>
                                        </button>
                                    </div>
                                    <!--end::Actions-->
                                </form>
                                <!--end::Form-->
                            </div>
                            <!--end::Wrapper-->
                        </div>
                    </div>

                </div>

            </div>


        </div>
    </div>
</div>

<div class="block-content" id="divGrid" style="position: initial; height:100vh; overflow: auto;">
    @{
        Html.RenderPartial("_OrderListesi", Model.OrderList);
    }
</div>


