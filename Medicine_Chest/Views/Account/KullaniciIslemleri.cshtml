
@model KullaniciViewModel
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script>
        // grid üzerinde herhangi bir kaydın silinmesi için tıklandığında
        // hidden field'a kaydın id'sini basıp
        // diyaloğun açılmasını sağlayan metottur.
        function SilHazirlik(kodTankTuru) {
            $("#hdnKodTankTuruIdIslemler").val(kodTankTuru);
            $("#dialogSil").data("kendoDialog").open();
        }

        // grid üzerinde silinmiş herhangi bir kaydın aktif hale getirilmesi için tıklandığında
        // hidden field'a kaydın id'sini basıp
        // diyaloğun açılmasını sağlayan metottur.
        function AktiflestirHazirlik(kodTankTuru) {
            $("#hdnKodTankTuruIdIslemler").val(kodTankTuru);
            $("#dialogAktiflestir").data("kendoDialog").open();
        }

        // grid üzerinde herhangi bir kaydın kilitlenmesi için tıklandığında
        // hidden field'a kaydın id'sini basıp
        // diyaloğun açılmasını sağlayan metottur.
        function KilitleHazirlik(kodTankTuru) {
            $("#hdnKodTankTuruIdIslemler").val(kodTankTuru);
            $("#dialogKilitle").data("kendoDialog").open();
        }

        // silme diyaloğunda tamam tuşuna basıldığında
        // hidden field'daki id bilgisini kullanarak kaydın silinmesini
        // ve gridin refresh edilmesini sağlayan butondur
        function Sil() {
            $("#loading").show();
            // burada aktif formun tüm elemanları aşağıdaki kod satırı ile alınıyor
            var iisAdresi = $("#hdnIISAdresi").data('value').toString();
            $.ajax({
                type: "POST",
                url: iisAdresi + "/SistemAyarlariTankTuru/KodTankTuruSil",
                data: { kodTankTuruId: $("#hdnKodTankTuruIdIslemler").val() },
                dataType: 'json',
                success: function (data) {
                    $("#loading").hide();
                    if (data.HataMi === false) {
                        Lobibox.notify('success', { size: 'mini', msg: 'MesajSabitler.IslemBasarili' });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                    } else {
                        Lobibox.notify('error', { size: 'large', msg: data.Mesaj });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                        event.preventDefault();
                        return false;
                    }
                },
                error: function (error) {
                    $("#loading").hide();
                    Lobibox.notify('error', { size: 'large', msg: 'MesajSabitler.IslemBasarisiz' });
                    // sonrasında ilgili ajax metodu buradan çağrılıyor
                    $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                }
            });
        };

        // aktifleştirme diyaloğunda tamam tuşuna basıldığında
        // hidden field'daki id bilgisini kullanarak kaydın aktif hale getirilmesini
        // ve gridin refresh edilmesini sağlayan butondur
        function Aktiflestir() {
            $("#loading").show();
            // burada aktif formun tüm elemanları aşağıdaki kod satırı ile alınıyor
            var iisAdresi = $("#hdnIISAdresi").data('value').toString();
            $.ajax({
                type: "POST",
                url: iisAdresi + "/SistemAyarlariTankTuru/KodTankTuruAktiflestir",
                data: { kodTankTuruId: $("#hdnKodTankTuruIdIslemler").val() },
                dataType: 'json',
                success: function (data) {
                    $("#loading").hide();
                    if (data.HataMi === false) {
                        Lobibox.notify('success', { size: 'mini', msg: 'MesajSabitler.IslemBasarili' });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                    } else {
                        Lobibox.notify('error', { size: 'large', msg: data.Mesaj });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                        event.preventDefault();
                        return false;
                    }
                },
                error: function (error) {
                    $("#loading").hide();
                    Lobibox.notify('error', { size: 'large', msg: 'MesajSabitler.IslemBasarisiz' });
                    // sonrasında ilgili ajax metodu buradan çağrılıyor
                    $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                }
            });
        };

        // kilitleme diyaloğunda tamam tuşuna basıldığında
        // hidden field'daki id bilgisini kullanarak kaydın kilitlenmesini
        // ve gridin refresh edilmesini sağlayan butondur
        function Kilitle() {
            $("#loading").show();
            // burada aktif formun tüm elemanları aşağıdaki kod satırı ile alınıyor
            var iisAdresi = $("#hdnIISAdresi").data('value').toString();
            $.ajax({
                type: "POST",
                url: iisAdresi + "/SistemAyarlariTankTuru/KodTankTuruKilitle",
                data: { kodTankTuruId: $("#hdnKodTankTuruIdIslemler").val() }, // parametre olarak mevcut formumuz gönderiliyor
                dataType: 'json',
                success: function (data) {
                    $("#loading").hide();
                    if (data.HataMi === false) {
                        Lobibox.notify('success', { size: 'mini', msg: 'MesajSabitler.IslemBasarili' });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                    } else {
                        Lobibox.notify('error', { size: 'large', msg: data.Mesaj });
                        // sonrasında ilgili ajax metodu buradan çağrılıyor
                        $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                        event.preventDefault();
                        return false;
                    }
                },
                error: function (error) {
                    $("#loading").hide();
                    Lobibox.notify('error', { size: 'large', msg: 'MesajSabitler.IslemBasarisiz' });
                    // sonrasında ilgili ajax metodu buradan çağrılıyor
                    $("#gridKodTankTuru").data("kendoGrid").dataSource.read();
                }
            });
        };

        // grid üzerindeki yeni kayıt butonuna tıklandığında
        // hesap planı ekleyebilmek için gerekli ekranın açılmasını sağlayacak metottur.
        function KayitEkraniAc(kodTankTuru, islem) {
            $("#loading").show();

            $.ajax({
                type: "GET",
                url: "/Account/KullaniciIslemi",
                datatype: "Json",
                data: { Id: kodTankTuru, islemTuru: islem },
                success: function (data) {
                    // burada dinamik olarak bir detay div'i oluşturuluyor
                    $('body').append($('<div id="divKayitPopup"></div>'));
                    // bu div'a partial view üzerinden gelen veriler basılıyor
                    $("#divKayitPopup").html(data);
                    //$("#divKayitPopup").css("z-index", 9999999);
                    //$("#kodTankTuruKayit").css("z-index", 9999999);
                    $('#KullaniciKayit').modal('show');
                    $("#loading").hide();
                    event.preventDefault();
                    return false;
                },
                error: function (error) {
                    $("#loading").hide();
                    Lobibox.notify('error', { size: 'large', msg: "Arıza Türü Kayıt Ekranı Açma İşlemi Başarısız" });
                    event.preventDefault();
                    return false;
                }
            });
        };

        function FiltreEkraniAc() {
            $('#exampleModal1').modal('show');
        }

    </script>
}


<script src="~/assets/js/custom/authentication/sign-up/general.js"></script>
<div class="block block-bordered">
    <div class="block-header bg-gray-lighter" style="text-align: right">
        <h3 class="block-title" style="text-align: center">@ViewBag.Header</h3>

        <div class="block-options-simple ">
            <button type="button" class="btn btn-sm btn-danger"  style ="margin-right : 15px" data-toggle="modal" data-target="#exampleModal1"><i class="fa fa-filter"></i> Filtrele</button>
            <button class="btn btn-sm btn-success"  style ="margin-right : 35px" type="button" id="btnYeniKayit" onclick="KayitEkraniAc(null, 'Ekleme')"><i class="fa fa-plus"></i> Yeni Kayıt</button>
<br></br>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Filtrele</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="block block-bordered">

                    <div class="block-content">

                        <div class="post d-flex flex-column-fluid" id="kt_post">
                            <!--begin::Wrapper-->
                            <div class="w-lg-600px bg-white rounded shadow-sm p-10 p-lg-15 mx-auto">
                                <!--begin::Form-->
                                <form class="form w-100" novalidate="novalidate" id="kt_sign_up_form1" asp-controller="Account" asp-action="FiltreleKullanici" method="post" enctype="multipart/form-data">
                                    <!--begin::Heading-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Kullanıcı Adı</label>
                                        <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="UserNameSorgu" asp-for="UserNameSorgu" autocomplete="off" />
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="row fv-row mb-7">
                                        <!--begin::Col-->
                                        <div class="col-xl-6">
                                            <label class="form-label fw-bolder text-dark fs-6">Ad</label>
                                            <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="NameSorgu" asp-for="NameSorgu" autocomplete="off" />
                                        </div>
                                        <!--end::Col-->
                                        <!--begin::Col-->
                                        <div class="col-xl-6">
                                            <label class="form-label fw-bolder text-dark fs-6">Soyad</label>
                                            <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="SurnameSorgu" asp-for="SurnameSorgu" autocomplete="off" />
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Email</label>
                                        <input class="form-control form-control-lg form-control-solid" type="email" placeholder="" name="EmailSorgu" asp-for="EmailSorgu" autocomplete="off" data-val-required="The Email Address field is required." />
                                        <span asp-validation-for="EmailSorgu" class="text-danger"></span>
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">TC Kimlik No</label>
                                        <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="IdentificationNoSorgu" asp-for="IdentificationNoSorgu" autocomplete="off" />
                                        <span asp-validation-for="IdentificationNoSorgu" class="text-danger"></span>
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Adres</label>
                                        <input class="form-control form-control-lg form-control-solid" type="text" placeholder="" name="AddressSorgu" asp-for="AddressSorgu" autocomplete="off" />
                                        <span asp-validation-for="AddressSorgu" class="text-danger"></span>
                                    </div>
                                    <!--end::Input group-->
                                    <!--begin::Input group-->
                                    <div class="fv-row mb-7">
                                        <label class="form-label fw-bolder text-dark fs-6">Telefon</label>
                                        <input class="form-control form-control-lg form-control-solid PhoneMask" type="text" placeholder="" name="PhoneNumberSorgu" asp-for="PhoneNumberSorgu" autocomplete="off" />
                                    </div>



                                    <!--begin::Actions-->
                                    <div class="text-center">
                                        @*<button type="submit" class="btn btn-primary">Register</button>*@
                                        <button type="submit" id="kt_sign_up_submit1" class="btn btn-lg btn-primary">
                                            <span class="indicator-label">Sorgula</span>
                                        </button>
                                    </div>
                                    <!--end::Actions-->
                                </form>
                                <!--end::Form-->
                            </div>
                            <!--end::Wrapper-->
                        </div>
                    </div>

                </div>

            </div>


        </div>
    </div>
</div>

<div class="block-content" id="divGrid" style="position: initial; height:100vh; overflow: auto;">
    @{
        Html.RenderPartial("_KullaniciListesi", Model.UserList);
    }
</div>


