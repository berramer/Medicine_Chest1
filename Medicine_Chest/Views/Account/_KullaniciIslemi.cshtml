                            <!--begin::Form-->
                            <form class="form w-100" novalidate="novalidate" id="kt_sign_up_form" asp-controller="Account" asp-action="KullaniciIslemi" method="post" enctype="multipart/form-data">
                                <!--begin::Heading-->
                                <div class="mb-10 text-center">
