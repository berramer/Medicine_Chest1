                                </div>
                            </div>
                                }
                                else
                                {
                                    <div class="fv-row mb-5">

                                        <input class="form-control form-control-lg form-control-solid" type="hidden" placeholder="" name="PharmaciesId" asp-for="PharmaciesId" autocomplete="off" value=@user.PharmaciesId />
