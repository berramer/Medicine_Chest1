<script> 
       function KayitEkraniAc(kodTankTuru, islem) {
            $("#loading").show();

            $.ajax({
                type: "GET",
                url: "/MedicineIslemleri/MedicineIslemi",
                datatype: "Json",
                data: { Id: kodTankTuru, islemTuru: islem },
                success: function (data) {
                    // burada dinamik olarak bir detay div'i oluşturuluyor
                    $('body').append($('<div id="divKayitPopup"></div>'));
                    // bu div'a partial view üzerinden gelen veriler basılıyor
                    $("#divKayitPopup").html(data);
                    //$("#divKayitPopup").css("z-index", 9999999);
                    //$("#kodTankTuruKayit").css("z-index", 9999999);
                    $('#MedicineKayit').modal('show');
                    $("#loading").hide();
                    event.preventDefault();
                    return false;
                },
                error: function (error) {
                    $("#loading").hide();
                    Lobibox.notify('error', { size: 'large', msg: "Arıza Türü Kayıt Ekranı Açma İşlemi Başarısız" });
                    event.preventDefault();
                    return false;
                }
            });
        };

</script>

